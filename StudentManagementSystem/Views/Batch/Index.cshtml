@model IEnumerable<StudentManagementSystem.Models.Batch>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Batch List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Batch" asp-action="Create" class="btn btn-primary">Create New Batch</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Batch Id</th>
                    <th>Batch Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var batch in Model)
                {
                    <tr>
                        <td width="35%">@batch.Id</td>
                        <td width="35%">@batch.BatchYear</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Batch" asp-action="Update" asp-route-Id="@batch.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Batch" asp-action="Delete" asp-route-Id="@batch.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p> No batch created yet</p>
    }

</div>