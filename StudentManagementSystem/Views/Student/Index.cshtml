@model IEnumerable<StudentManagementSystem.Models.Student>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6 text-right">
           <a asp-controller="Student" asp-action="Create" class="btn btn-primary">Create New Student</a>
        </div>
    </div>
    <br/>
    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>Student Name</th>
            <th>Symbol No.</th>
            <th>Faculty</th>
            <th>Batch</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
         {
        <tr>
            <td width="10%">@student.Id</td>
            <td width="10%">@student.FullName</td>
            <td width="10%">@student.SymbolNo</td>
            <td width="10%">@student.Faculty</td>
            <td width="10%">@student.Batch</td>
            <td width="10%">@student.Address</td>
            <td width="10%">@student.Phone</td>
            <td width="10%">@student.Email</td>
            <td width="20%">
                <div class="w-100 btn-group" role="group">
                    <a asp-controller="Student" asp-action="Update" asp-route-Id="@student.Id" class="btn btn-primary mx-1">Update</a>
                    <a asp-controller="Student" asp-action="Delete" asp-route-Id="@student.Id" class="btn btn-danger mx-1">Delete</a>
                </div>
            </td>
        </tr>
         }
    </tbody>
</table>

    }
            else
            {
                <p> No student created yet</p>
            }

</div>