@model IEnumerable<StudentManagementSystem.Models.Faculty>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Faculty List</h2>
        </div>
        <div class="col-6 text-right">
           <a asp-controller="Faculty" asp-action="Create" class="btn btn-primary">Create New Faculty</a>
        </div>
    </div>
    <br/>
    @if (Model.Count() > 0)
    {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Faculty Id</th>
            <th>Faculty Name</th>
            <th>Affilated University</th>
            <th> Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var faculty in Model)
         {
        <tr>
            <td width="25">@faculty.Id</td>
            <td width="25%">@faculty.FacultyName</td>
            <td width="25%">@faculty.Affilation</td>
            <td width="25%">
                <div class="w-100 btn-group" role="group">
                    <a asp-controller="Faculty" asp-action="Update" asp-route-Id="@faculty.Id" class="btn btn-primary mx-1">Update</a>
                    <a asp-controller="Faculty" asp-action="Delete" asp-route-Id="@faculty.Id" class="btn btn-danger mx-1">Delete</a>
                </div>
            </td>
        </tr>
         }
    </tbody>
</table>

    }
            else
            {
                <p> No faculty created yet</p>
            }

</div>